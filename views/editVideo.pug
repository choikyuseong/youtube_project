extends layouts/main

block content
    .form_container
        form(action=routes.edit_video(video.id), method="post")
            input(type="text", placeholder="Title", name="title" ,value=video.title)
            textarea(name="description" , placeholder="Description" ,value=video.description)
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=routes.delete_video(video.id)) Delete Video
